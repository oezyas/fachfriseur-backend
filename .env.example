# Server
NODE_ENV=production
# Auf Hosting wird PORT gesetzt; lokal optional:
# PORT=3443

# MongoDB
MONGO_URI=YOUR_MONGODB_URI

# JWT
JWT_SECRET=CHANGE_ME_TO_A_LONG_RANDOM_STRING

# SMTP (Gmail)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=you@example.com
EMAIL_PASS=your_app_password
EMAIL_FROM="Fachfriseur <you@example.com>"

# Erlaubte Frontend-Origins (Komma-getrennt)
FRONTEND_ORIGIN=https://your-frontend.tld

# TLS (nur lokal, optional)
# TLS_KEY_PATH=./localhost-key.pem
# TLS_CERT_PATH=./localhost.pem